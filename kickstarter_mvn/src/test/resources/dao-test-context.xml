<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

	<bean id="dateFormat" class="java.text.SimpleDateFormat">
		<constructor-arg value="yyyy-MM-dd" />
	</bean>

	<bean name="existingCategory" class="kickstarter.entity.Category">
		<property name="id" value="1" />
	</bean>

	<bean name="testCategory" class="kickstarter.entity.Category"
		scope="prototype">
		<property name="name" value="testName" />
	</bean>
	<bean name="testProject" class="kickstarter.entity.Project" scope="prototype">
		<property name="category" ref="existingCategory" />
		<property name="name" value="testName" />
		<property name="description" value="testDescription" />
		<property name="totalAmount" value="10000" />
		<property name="finalDate">
			<bean factory-bean="dateFormat" factory-method="parse">
				<constructor-arg value="2020-01-01" />
			</bean>
		</property>
		<property name="history" value="testHistory" />
		<property name="link" value="testLink" />
	</bean>
</beans>