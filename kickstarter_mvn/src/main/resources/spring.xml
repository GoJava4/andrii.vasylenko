<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

	<bean id="ModelFactory" class="kickstarter.model.factory.ModelFactoryImpl"
		scope="singleton" />

	<bean id="ViewFactory" class="kickstarter.view.factory.ViewFactoryImpl"
		scope="singleton" />

	<bean id="Executor" class="kickstarter.control.executor.ExecutorImpl"
		scope="singleton">
		<constructor-arg ref="ModelFactory" />
		<constructor-arg ref="ViewFactory" />
	</bean>

	<bean id="ConnectionPool" class="kickstarter.model.dao.connection.ConnectionPoolImpl"
		scope="singleton">
	</bean>

	<bean id="dao" class="kickstarter.model.dao.DAOImpl" scope="singleton">
		<constructor-arg ref="ConnectionPool" />
	</bean>

	<bean id="QuoteView" class="kickstarter.view.QuoteView" scope="prototype" />
	<bean id="CategoriesView" class="kickstarter.view.CategoriesView"
		scope="prototype" />
	<bean id="ProjectsView" class="kickstarter.view.ProjectsView"
		scope="prototype" />
	<bean id="ProjectView" class="kickstarter.view.ProjectView" scope="prototype" />
	<bean id="AskQuestionView" class="kickstarter.view.AskQuestionView"
		scope="prototype" />
	<bean id="AskQuestionSubmitView" class="kickstarter.view.AskQuestionSubmitView"
		scope="prototype" />

	<bean id="QuoteModel" class="kickstarter.model.QuoteModel" scope="prototype">
		<property name="dao" ref="dao" />
	</bean>
	<bean id="CategoriesModel" class="kickstarter.model.CategoriesModel"
		scope="prototype">
		<property name="dao" ref="dao" />
	</bean>
	<bean id="ProjectsModel" class="kickstarter.model.ProjectsModel"
		scope="prototype">
		<property name="dao" ref="dao" />
	</bean>
	<bean id="ProjectModel" class="kickstarter.model.ProjectModel"
		scope="prototype">
		<property name="dao" ref="dao" />
	</bean>
	<bean id="AskQuestionModel" class="kickstarter.model.AskQuestionModel"
		scope="prototype">
		<property name="dao" ref="dao" />
	</bean>
	<bean id="AskQuestionSubmitModel" class="kickstarter.model.AskQuestionSubmitModel"
		scope="prototype">
		<property name="dao" ref="dao" />
	</bean>

</beans>