<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

	<bean id="ModelFactory" class="kickstarter.model.factory.ModelFactoryImpl" />

	<bean id="ViewFactory" class="kickstarter.view.factory.ViewFactoryImpl" />

	<bean id="Executor" class="kickstarter.control.executor.ExecutorImpl">
		<constructor-arg ref="ModelFactory" />
		<constructor-arg ref="ViewFactory" />
	</bean>

	<bean id="QuoteView" class="kickstarter.view.QuoteView" />
	<bean id="CategoriesView" class="kickstarter.view.CategoriesView" />
	<bean id="ProjectsView" class="kickstarter.view.ProjectsView" />
	<bean id="ProjectView" class="kickstarter.view.ProjectView" />
	<bean id="AskQuestionView" class="kickstarter.view.AskQuestionView" />
	<bean id="AskQuestionSubmitView" class="kickstarter.view.AskQuestionSubmitView" />
	<bean id="DonateView" class="kickstarter.view.DonateView" />
	<bean id="DonateSubmitView" class="kickstarter.view.DonateSubmitView" />

	<bean id="dao" class="kickstarter.model.dao.DAOImpl">
		<constructor-arg ref="QuotesDAO" />
		<constructor-arg ref="CategoriesDAO" />
		<constructor-arg ref="ProjectsDAO" />
		<constructor-arg ref="QuestionsDAO" />
		<constructor-arg ref="PaymentsDAO" />
	</bean>

	<bean id="ConnectionPool" class="kickstarter.model.dao.connection.ConnectionPoolImpl" />

	<bean id="QuotesDAO" class="kickstarter.model.dao.sub.QuotesDAOImpl">
		<constructor-arg ref="ConnectionPool" />
	</bean>
	<bean id="CategoriesDAO" class="kickstarter.model.dao.sub.CategoriesDAOImpl">
		<constructor-arg ref="ConnectionPool" />
	</bean>
	<bean id="ProjectsDAO" class="kickstarter.model.dao.sub.ProjectsDAOImpl">
		<constructor-arg ref="ConnectionPool" />
	</bean>
	<bean id="QuestionsDAO" class="kickstarter.model.dao.sub.QuestionsDAOImpl">
		<constructor-arg ref="ConnectionPool" />
	</bean>
	<bean id="PaymentsDAO" class="kickstarter.model.dao.sub.PaymentsDAOImpl">
		<constructor-arg ref="ConnectionPool" />
	</bean>

	<bean id="QuoteModel" class="kickstarter.model.QuoteModel">
		<property name="dao" ref="dao" />
	</bean>
	<bean id="CategoriesModel" class="kickstarter.model.CategoriesModel">
		<property name="dao" ref="dao" />
	</bean>
	<bean id="ProjectsModel" class="kickstarter.model.ProjectsModel">
		<property name="dao" ref="dao" />
	</bean>
	<bean id="ProjectModel" class="kickstarter.model.ProjectModel">
		<property name="dao" ref="dao" />
	</bean>
	<bean id="AskQuestionModel" class="kickstarter.model.AskQuestionModel">
		<property name="dao" ref="dao" />
	</bean>
	<bean id="AskQuestionSubmitModel" class="kickstarter.model.AskQuestionSubmitModel">
		<property name="dao" ref="dao" />
	</bean>
	<bean id="DonateModel" class="kickstarter.model.DonateModel">
		<property name="dao" ref="dao" />
	</bean>
	<bean id="DonateSubmitModel" class="kickstarter.model.DonateSubmitModel">
		<property name="dao" ref="dao" />
	</bean>

	<bean id="Quote" class="kickstarter.model.entity.Quote" scope="prototype" />
	<bean id="Category" class="kickstarter.model.entity.Category"
		scope="prototype" />
	<bean id="Project" class="kickstarter.model.entity.Project" scope="prototype" />
	<bean id="PaymentVariant" class="kickstarter.model.entity.PaymentVariant"
		scope="prototype" />
</beans>