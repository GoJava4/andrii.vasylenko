<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd">

	<mvc:annotation-driven />

	<bean id="welcomeController" class="kickstarter.controller.WelcomeController"
		autowire="byName">
		<property name="view" value="Quote" />
	</bean>
	<bean id="categoriesController" class="kickstarter.controller.CategoriesController"
		autowire="byName">
		<property name="view" value="Categories" />
	</bean>
	<bean id="projectsController" class="kickstarter.controller.ProjectsController"
		autowire="byName">
		<property name="view" value="Projects" />
	</bean>
	<bean id="projectController" class="kickstarter.controller.ProjectController"
		autowire="byName">
		<property name="view" value="Project" />
	</bean>

	<bean id="askQuestionController" class="kickstarter.controller.AskQuestionController"
		autowire="byName">
		<property name="view" value="AskQuestion" />
		<property name="submitView" value="AskQuestionSubmit" />
	</bean>
	<bean id="donateController" class="kickstarter.controller.DonateController"
		autowire="byName">
		<property name="view" value="Donate" />
		<property name="submitView" value="DonateSubmit" />
	</bean>

	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.UrlBasedViewResolver">
		<property name="viewClass"
			value="org.springframework.web.servlet.view.JstlView" />
		<property name="prefix" value="/WEB-INF/jsp/" />
		<property name="suffix" value=".jsp" />
	</bean>
</beans>