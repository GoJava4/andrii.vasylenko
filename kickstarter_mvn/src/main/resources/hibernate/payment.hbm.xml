<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="kickstarter.entity.Payment" table="Payments">
		<id name="id" type="java.lang.Integer">
			<column name="id" />
			<generator class="identity" />
		</id>

		<many-to-one name="project" class="kickstarter.entity.Project"
			fetch="join" foreign-key="payments_id_project_fkey">
			<column name="id_project" not-null="true" />
		</many-to-one>

		<property name="amount" type="java.lang.Integer">
			<column name="amount" length="255" />
		</property>
	</class>
</hibernate-mapping>