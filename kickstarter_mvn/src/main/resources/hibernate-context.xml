<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
        http://www.springframework.org/schema/tx
        http://www.springframework.org/schema/tx/spring-tx.xsd">

	<bean id="quoteDao" class="kickstarter.dao.QuoteDaoImpl" parent="dao" />
	<bean id="categoryDao" class="kickstarter.dao.CategoryDaoImpl"
		parent="dao" />
	<bean id="projectDao" class="kickstarter.dao.ProjectDaoImpl"
		parent="dao" />
	<bean id="questionDao" class="kickstarter.dao.QuestionDaoImpl"
		parent="dao" />
	<bean id="paymentVariantDao" class="kickstarter.dao.PaymentVariantDaoImpl"
		parent="dao" />
	<bean id="paymentDao" class="kickstarter.dao.PaymentDaoImpl"
		parent="dao" />

	<bean id="dao" abstract="true">
		<constructor-arg ref="sessionFactory" />
	</bean>

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="classpath:hibernate\database.properties" />
	</bean>

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="${jdbc.driverClassName}" />
		<property name="url" value="${jdbc.url}" />
		<property name="username" value="${jdbc.username}" />
		<property name="password" value="${jdbc.password}" />
	</bean>

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">${hibernate.dialect}</prop>
				<prop key="hibernate.show_sql">${hibernate.show_sql}</prop>
				<prop key="hibernate.enable_lazy_load_no_trans">${hibernate.enable_lazy_load_no_trans}</prop>
			</props>
		</property>
		<property name="mappingResources">
			<list>
				<value>\hibernate\Quote.hbm.xml</value>
				<value>\hibernate\Category.hbm.xml</value>
				<value>\hibernate\Project.hbm.xml</value>
				<value>\hibernate\Payment.hbm.xml</value>
				<value>\hibernate\PaymentVariant.hbm.xml</value>
				<value>\hibernate\Question.hbm.xml</value>
			</list>
		</property>
	</bean>

	<bean id="transactionManager"
		class="org.springframework.orm.hibernate4.HibernateTransactionManager"
		autowire="byName" />


	<tx:annotation-driven />

</beans>