<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

	<bean id="quoteDao" parent="proxy">
		<property name="target" ref="basicQuoteDao" />
	</bean>
	<bean id="categoryDao" parent="proxy">
		<property name="target" ref="basicCategoryDao" />
	</bean>
	<bean id="projectDao" parent="proxy">
		<property name="target" ref="basicProjectDao" />
	</bean>
	<bean id="questionDao" parent="proxy">
		<property name="target" ref="basicQuestionDao" />
	</bean>
	<bean id="paymentVariantDao" parent="proxy">
		<property name="target" ref="basicPaymentVariantDao" />
	</bean>
	<bean id="paymentDao" parent="proxy">
		<property name="target" ref="basicPaymentDao" />
	</bean>

	<bean id="basicQuoteDao" class="kickstarter.dao.QuoteDao"
		autowire="byName" />
	<bean id="basicCategoryDao" class="kickstarter.dao.CategoryDao"
		autowire="byName" />
	<bean id="basicProjectDao" class="kickstarter.dao.ProjectDao"
		autowire="byName" />
	<bean id="basicQuestionDao" class="kickstarter.dao.QuestionDao"
		autowire="byName" />
	<bean id="basicPaymentVariantDao" class="kickstarter.dao.PaymentVariantDao"
		autowire="byName" />
	<bean id="basicPaymentDao" class="kickstarter.dao.PaymentDao"
		autowire="byName" />

	<bean id="proxy" class="org.springframework.aop.framework.ProxyFactoryBean"
		abstract="true">
		<property name="interceptorNames">
			<list>
				<value>transactionInterceptor</value>
			</list>
		</property>
	</bean>

	<bean id="transactionInterceptor"
		class="org.springframework.transaction.interceptor.TransactionInterceptor">
		<property name="transactionManager" ref="transactionManager" />
		<property name="transactionAttributes">
			<props>
				<prop key="get*">PROPAGATION_REQUIRED</prop>
				<prop key="add*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>

	<bean id="transactionManager"
		class="org.springframework.orm.hibernate4.HibernateTransactionManager"
		autowire="byName" />

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="classpath:hibernate\database.properties" />
	</bean>

	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="${jdbc.driverClassName}" />
		<property name="url" value="${jdbc.url}" />
		<property name="username" value="${jdbc.username}" />
		<property name="password" value="${jdbc.password}" />
	</bean>

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">${hibernate.dialect}</prop>
				<prop key="hibernate.show_sql">${hibernate.show_sql}</prop>
			</props>
		</property>
		<property name="mappingResources">
			<list>
				<value>\hibernate\Quote.hbm.xml</value>
				<value>\hibernate\Category.hbm.xml</value>
				<value>\hibernate\Project.hbm.xml</value>
				<value>\hibernate\Payment.hbm.xml</value>
				<value>\hibernate\PaymentVariant.hbm.xml</value>
				<value>\hibernate\Question.hbm.xml</value>
			</list>
		</property>
	</bean>
</beans>