<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
        http://www.springframework.org/schema/tx
        http://www.springframework.org/schema/tx/spring-tx.xsd">

	<bean id="quoteDao" class="kickstarter.dao.hibernate.QuoteDaoImpl"
		autowire="byName" />
	<bean id="categoryDao" class="kickstarter.dao.hibernate.CategoryDaoImpl"
		autowire="byName" />
	<bean id="projectDao" class="kickstarter.dao.hibernate.ProjectDaoImpl"
		autowire="byName" />
	<bean id="questionDao" class="kickstarter.dao.hibernate.QuestionDaoImpl"
		autowire="byName" />
	<bean id="paymentVariantDao" class="kickstarter.dao.hibernate.PaymentVariantDaoImpl"
		autowire="byName" />
	<bean id="paymentDao" class="kickstarter.dao.hibernate.PaymentDaoImpl"
		autowire="byName" />

	<bean id="daoSupport" class="kickstarter.dao.hibernate.support.HibernateDaoSupport"
		autowire="byName" />

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="classpath:hibernate\database.properties" />
	</bean>

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="${jdbc.driverClassName}" />
		<property name="url" value="${jdbc.url}" />
		<property name="username" value="${jdbc.username}" />
		<property name="password" value="${jdbc.password}" />
	</bean>

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="configLocation" value="classpath:hibernate\hibernate.cfg.xml" />
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">${hibernate.dialect}</prop>
				<prop key="hibernate.show_sql">${hibernate.show_sql}</prop>
				<prop key="hibernate.hbm2ddl.auto">${hibernate.hbm2ddl.auto}</prop>
				<prop key="hibernate.enable_lazy_load_no_trans">${hibernate.enable_lazy_load_no_trans}</prop>
				<prop key="jadira.usertype.autoRegisterUserTypes">${jadira.usertype.autoRegisterUserTypes}</prop>
				<prop key="jadira.usertype.databaseZone">${jadira.usertype.databaseZone}</prop>
				<prop key="jadira.usertype.javaZone">${jadira.usertype.javaZone}</prop>
			</props>
		</property>
	</bean>

	<bean id="transactionManager"
		class="org.springframework.orm.hibernate4.HibernateTransactionManager"
		autowire="byName" />

	<tx:annotation-driven />

</beans>