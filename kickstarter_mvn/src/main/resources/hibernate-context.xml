<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

	<bean id="QuoteDAO" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="QuoteDAOImpl" />
		<property name="interceptorNames">
			<list>
				<value>transactionInterceptor</value>
			</list>
		</property>
	</bean>
	<bean id="CategoryDAO" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="CategoryDAOImpl" />
		<property name="interceptorNames">
			<list>
				<value>transactionInterceptor</value>
			</list>
		</property>
	</bean>
	<bean id="ProjectDAO" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="ProjectDAOImpl" />
		<property name="interceptorNames">
			<list>
				<value>transactionInterceptor</value>
			</list>
		</property>
	</bean>
	<bean id="QuestionDAO" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="QuestionDAOImpl" />
		<property name="interceptorNames">
			<list>
				<value>transactionInterceptor</value>
			</list>
		</property>
	</bean>

	<bean id="QuoteDAOImpl" class="kickstarter.dao.QuoteDAOImpl">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="CategoryDAOImpl" class="kickstarter.dao.CategoryDAOImpl">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="ProjectDAOImpl" class="kickstarter.dao.ProjectDAOImpl">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="QuestionDAOImpl" class="kickstarter.dao.QuestionDAOImpl">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean id="transactionInterceptor"
		class="org.springframework.transaction.interceptor.TransactionInterceptor">
		<property name="transactionManager" ref="transactionManager" />
		<property name="transactionAttributes">
			<props>
				<prop key="get*">PROPAGATION_REQUIRED</prop>
				<prop key="add*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>

	<bean id="transactionManager"
		class="org.springframework.orm.hibernate4.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location">
			<value>classpath:hibernate\database.properties</value>
		</property>
	</bean>

	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="${jdbc.driverClassName}" />
		<property name="url" value="${jdbc.url}" />
		<property name="username" value="${jdbc.username}" />
		<property name="password" value="${jdbc.password}" />
	</bean>

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">

		<property name="dataSource">
			<ref bean="dataSource" />
		</property>

		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.PostgreSQL82Dialect</prop>
				<prop key="hibernate.show_sql">true</prop>
			</props>
		</property>

		<property name="mappingResources">
			<list>
				<value>\hibernate\Quote.hbm.xml</value>
				<value>\hibernate\Category.hbm.xml</value>
				<value>\hibernate\Project.hbm.xml</value>
				<value>\hibernate\Payment.hbm.xml</value>
				<value>\hibernate\PaymentVariant.hbm.xml</value>
				<value>\hibernate\Question.hbm.xml</value>
			</list>
		</property>
	</bean>
</beans>